<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="colorBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Color de fondo del cuadro del TextInputLayout -->
        <item name="boxBackgroundColor">#FFFFFF</item>

        <!-- Color del borde del cuadro del TextInputLayout -->
        <item name="boxStrokeColor">@color/colorPrimario</item>

        <!-- Color del texto del hint -->
        <item name="android:textColorHint">@color/red</item>

        <!-- Color del texto de la etiqueta -->
        <item name="android:textColor">@color/black</item>

        <item name="hintTextColor">@color/black</item>
        <item name="endIconTint">@color/colorPrimario</item>
        <item name="startIconTint">@color/colorPrimario</item>
    </style>
</resources>